<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <Script file="TWPowerBar.lua"/>

    <Frame name="TWPowerBar" hidden="false" toplevel="true"
           parent="UIParent" movable="true" enableMouse="true" resizable="false">
        <Size>
            <AbsDimension x="200" y="20"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Frames>

            <Frame name="$parentHP" framestrata="LOW" hidden="false">
                <Size>
                    <AbsDimension x="50" y="15"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT"/>
                </Anchors>
                <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" tile="true">
                </Backdrop>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentText" inherits="GameFontNormal"
                                    text="hp/hp" hidden="false">
                            <Size>
                                <AbsDimension x="200" y="20"/>
                            </Size>
                            <Anchors>
                                <Anchor point="LEFT">
                                    <Offset>
                                        <AbsDimension x="0" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Frame name="$parentPower" framestrata="LOW" hidden="false">
                <Size>
                    <AbsDimension x="50" y="15"/>
                </Size>
                <Anchors>
                    <Anchor point="LEFT">
                        <Offset>
                            <AbsDimension x="0" y="-15"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" tile="true">
                </Backdrop>
                <Layers>
                    <Layer level="OVERLAY">
                        <FontString name="$parentText" inherits="GameFontNormal"
                                    text="44" hidden="false">
                            <Size>
                                <AbsDimension x="200" y="20"/>
                            </Size>
                            <Anchors>
                                <Anchor point="LEFT">
                                    <Offset>
                                        <AbsDimension x="0" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Frame name="$parentBackground"  framestrata="BACKGROUND" hidden="true">
                <Size>
                    <AbsDimension x="200" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="CENTER">
                        <Offset>
                            <AbsDimension x="0" y="-8"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" tile="true">
                    <Color r="0" g="0" b="0" a="0.7"/>
                </Backdrop>
            </Frame>



        </Frames>
        <Scripts>
            <OnLoad>
                    this:RegisterForDrag("LeftButton");
                    this:SetMovable(1);
                    this:SetUserPlaced(true);
                    updatePowerBar()
            </OnLoad>
            <OnUpdate>
                    updatePowerBar()
            </OnUpdate>
            <OnDragStart>
                    this:StartMoving();
                    this.isMoving = true;
            </OnDragStart>
            <OnDragStop>
                    this:StopMovingOrSizing();
                    this.isMoving = false;
            </OnDragStop>
        </Scripts>
    </Frame>


</Ui>
